{
    "version": "2.0.0",
    "command": "g++",
    // 编译单个文件
    "args": ["-g","${file}","-o","${fileDirname}/${fileBasenameNoExtension}.exe"], 
    // 编译项目中全部文件，有.h头文件的
    // "args": ["-g","*.cpp","-o","${fileDirname}/${fileBasenameNoExtension}.exe"], 
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}


